<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TagTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_tag</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>